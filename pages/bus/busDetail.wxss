bellows-wrapper.bus-detail {
  width: 100%;
  height: 99%;
  border-top: 1px solid #ddd;
}

.header-wrapper {
  background: #fff;
  padding: .625rem;
  border-bottom: 1rpx solid #D7D6DC;
  vertical-align: middle;
  padding-right:0;
}

.bus-name {
  font-weight: bold;
  font-family:Arial;
  font-size: 1.2rem;
  text-align: left;
  display: inline-block;
  margin-right: 20rpx;
  vertical-align: middle;
  color:#ea6b3c;
}

.bus-start-end {
  max-width:90%;
  text-align: left;
  font-size: 0.9rem;
  overflow:hidden;
  white-space:nowrap;
  vertical-align: middle;
