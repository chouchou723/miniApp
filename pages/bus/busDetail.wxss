}

.station {
  display: inline-block;
}

.icon-switch {
  width: 24rpx;
  height: 18rpx;
  padding: 0 10rpx;
}

.station-wraper {
  width: 100%;
  display:flex;
  justify-content: flex-start;
  align-items: center;
  padding-bottom: 4rpx;
  overflow:hidden;
  text-overflow:ellipsis;
  white-space:nowrap;
  margin-bottom:12rpx;
  flex-wrap: wrap;
}

.time-wraper {
  width: 90%;
  color:#466d90;
  font-family:Arial;
  display:inline-block;
}

.time {
  font-size: .75rem;
  display: inline-block;
}

.late-time {
  margin-left: 30rpx;
}
.rotateI{
   animation: 1s myrotate forwards;
}
.rotateT{
   animation: 1s myrotate1 forwards;
  
}
@keyframes myrotate{
         from {transform:rotate(0deg);}    
    to    {transform:rotate(-360deg);}
        }
        @keyframes myrotate1{
         from {transform:rotate(0deg);}    
    to    {transform:rotate(360deg);}
        }
